<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppPropina"
             x:Class="AppPropina.MainPage">

    <TableView Intent="Form">
        <TableSection Title="Datos Generales"
                      >
            <EntryCell x:Name="entTotal" 
                       Label="Total"
                       Placeholder="$0.0">
            </EntryCell>
            <EntryCell x:Name="entPropina" 
                       Label="Propina"
                       Placeholder="%">
            </EntryCell>
            <EntryCell x:Name="entPersonas" 
                       Label="Número de Personas"
                       Placeholder="Ingresar número 
                                    de personas">
            </EntryCell>
        </TableSection>
        <TableSection Title="Calcular"
                      >
            <ViewCell>
                <ViewCell.View>
                    <StackLayout>
                        <Button Text="Calcular"
                                x:Name="btnCalcular">
                            
                        </Button>
                    </StackLayout>
                </ViewCell.View>
            </ViewCell>
        </TableSection>
        
    </TableView>

</ContentPage>
